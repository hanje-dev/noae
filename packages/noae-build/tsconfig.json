{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "**/*.spec.ts",
    "./lib",
    "fixtures",
    "bin",
    "examples"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "outDir": "./lib"
  }
}